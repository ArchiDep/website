---
permalink: /search.json
pretty_print: true
---
[
{%- for section in site.data.course.sections -%}
  {%- unless section.items == empty or forloop.first %},{% endunless -%}
  {%- for item in section.items -%}
    {"id":{{ item.url | jsonify }},"title":{{ item.title | jsonify }},"url":{{ item.url | jsonify }},"type":
    {{- item.course_type | jsonify -}}
    ,"text":
    {{- item.content | strip_html | collapse_whitespace | jsonify -}}
    }
    {%- if item.slides -%}
      ,{"id":{{ item.slides.url | jsonify }},"title":{{ item.slides.title | jsonify }},"url":
      {{- item.slides.url | jsonify -}}
      ,"type":"slides" ,"text":{{ item.slides.content | strip_html | collapse_whitespace | jsonify -}}
      }
    {%- endif -%}
    {%- unless forloop.last %},{% endunless -%}
  {%- endfor -%}
{%- endfor -%}
]
