{
  "name": "archidep",
  "version": "0.0.0",
  "description": "Media engineering architecture and deployment course",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArchiDep/website.git"
  },
  "keywords": [
    "architecture",
    "deployment",
    "course"
  ],
  "author": "Simon Oulevay <simon.oulevay@heig-vd.ch>",
  "contributors": [
    "Mathias Oberson <mathias.oberson@heig-vd.ch>",
    "Arthur Verdon <arthur.verdon@heig-vd.ch>",
    "Simon Pinkas <simon.pinkas@heig-vd.ch>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ArchiDep/website/issues"
  },
  "homepage": "https://github.com/ArchiDep/website#readme",
  "scripts": {
    "doctoc": "doctoc --github --notitle README.md",
    "format": "npm run format:root && npm run --workspace course format",
    "format:root": "prettier --check .",
    "format:root:write": "prettier --write .",
    "format:write": "npm run format:root:write && npm run --workspace course format:write",
    "pdf": "npm run --workspace course pdf"
  },
  "workspaces": [
    "app",
    "course",
    "theme"
  ],
  "devDependencies": {
    "doctoc": "^2.2.1",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": "^24",
    "npm": ">= 8"
  }
}
