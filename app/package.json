{
  "name": "@archidep/app",
  "version": "0.0.0",
  "description": "Media engineering architecture and deployment course",
  "private": true,
  "scripts": {
    "build": "cross-env NODE_PATH=deps esbuild assets/js/app.js --bundle --target=es2017 --outdir=priv/static/assets/app --external:/fonts/* --external:/images/*",
    "build:production": "cross-env NODE_PATH=deps esbuild assets/js/app.js --bundle --target=es2017 --outdir=priv/static/assets/app --external:/fonts/* --external:/images/* --minify",
    "start": "cross-env NODE_PATH=deps esbuild assets/js/app.js --bundle --target=es2017 --outdir=priv/static/assets/app --external:/fonts/* --external:/images/* --sourcemap=inline --watch",
    "start:docker": "cross-env NODE_PATH=deps esbuild assets/js/app.js --bundle --target=es2017 --outdir=priv/static/assets/app --external:/fonts/* --external:/images/* --sourcemap=inline --watch --watch=forever"
  },
  "dependencies": {
    "@plausible-analytics/tracker": "^0.4.0",
    "clipboard": "^2.0.11",
    "cross-env": "^10.0.0",
    "esbuild": "^0.25.8"
  },
  "engines": {
    "node": "^24",
    "npm": ">= 8"
  }
}
