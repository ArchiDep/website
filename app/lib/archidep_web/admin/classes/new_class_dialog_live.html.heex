<dialog id="new-class-dialog" class="modal">
  <div class="modal-box">
    <h3 class="text-lg font-bold">New Class</h3>
    <.form for={@form} phx-change="validate" phx-submit="create">
      <.input type="text" field={@form[:name]} />
      <button>Save</button>
    </.form>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>
